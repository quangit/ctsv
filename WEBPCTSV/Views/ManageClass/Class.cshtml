@using WEBPCTSV.Models.bean
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "Class";
}

<h3 class="header-paper">Quản lý lớp</h3>
@{
    List<Class> listClass = ViewBag.Class;
}
<div ng-controller="ManageClass">
    <div class="row" style="margin-left: 10px">
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">Chọn khoa</button>
                </span>
                <select class="form-control" ng-model="faculty" ng-change="ChangeSelect()">
                    <option value="">Chọn khoa</option>
                    @foreach (Faculty faculty in ViewBag.faculty)
                    {
                        <option value="@faculty.IdFaculty">@faculty.FacultyName</option>
                    }
                </select>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">Chọn khóa</button>
                </span>
                <select class="form-control col-sm-3" ng-model="course" ng-change="ChangeSelect()">
                    <option value="">Chọn khóa</option>
                    @foreach (Course course in ViewBag.Course)
                    {
                        <option value="@course.IdCourse"> Khóa @course.CouseName</option>
                    }
                </select>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    <hr/>
    <div ng-bind-html="contentlistclass" class="container-layoutmanager"></div>
    <div id="modalAddClass" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content-->
            <form class="modal-content" action="/ManageClass/AddClass" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"> Thêm lớp </h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="LastNameClass">Tên Lớp:</label>
                            <div class="col-sm-7">
                                <div class="input-group">
                                    <span class="input-group-addon" ng-bind="FirstNameClass"></span>
                                    <input name="LastNameClass" ng-model="LastNameClass" type="text" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-5" for="email">Thời gian học:</label>
                            <div class="col-sm-7">
                                <div class="input-group">
                                    <input id="NumberMonthSchool" name="NumberMonthSchool" ng-model="NumberMonthSchool" type="text" class="form-control">
                                    <span class="input-group-addon"> Tháng</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-5" for="email">Học phí:</label>
                            <div class="col-sm-7">
                                <div class="input-group">
                                    <input id="MoneyOfMonth" name="MoneyOfMonth" type="text" ng-model="MoneyOfMonth" class="form-control">
                                    <span class="input-group-addon" >/Tháng</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" ng-click="AddClass()" style="float: left" data-dismiss="modal"><i class="fa fa-plus" aria-hidden="true"></i> Thêm </button>
                    <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                </div>
            </form>

        </div>
    </div>
</div>