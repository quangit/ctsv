@using WEBPCTSV.Models.bean
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "Class";
}

<h3 class="header-paper"> Quản lý khóa </h3>
@{
    List<Class> listClass = ViewBag.Class;
}
<div ng-controller="ManageCourse" class="container-layoutmanager">

    <table class="table table-hover" style="width: 500px">
        <thead>
        <tr>
            <th>STT</th>
            <th>Tên Khóa</th>
            <th>Năm tuyển sinh</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @{
            int stt = 1;
        }
        @foreach (Course course in ViewBag.Course)
        {
            <tr>
                <td>@stt</td>
                <td>@course.CouseName</td>
                <td>@course.AdmissionYear</td>
                <td>

                    <label class="label label-success" data-toggle="modal" data-target="#modalEditCourse_@course.IdCourse">Edit</label>
                    <div id="modalEditCourse_@course.IdCourse" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-sm">

                            <!-- Modal content-->
                            <form class="modal-content" action="/ManageClass/UpdateCourse?idCourse=@course.IdCourse" method="post">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title"> Chỉnh sửa Khóa học</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-horizontal" role="form">
                                        <div class="form-group">
                                            <label class="control-label col-sm-5" for="email">Tên Khóa:</label>
                                            <div class="col-sm-7">
                                                <input name="CourseName" value="@course.CouseName" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-5" for="email">Năm tuyển sinh:</label>
                                            <div class="col-sm-7">
                                                <input name="AdmissionYear" value="@course.AdmissionYear" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary" style="float: left"> Lưu chỉnh sửa </button>
                                    <a href="/ManageClass/DeleteCourse?idCourse=@course.IdCourse">
                                        <label class="btn btn-danger" style="float: left; margin-left: 10px"> Xóa</label>
                                    </a>
                                    <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                                </div>
                            </form>

                        </div>
                    </div>

                </td>
            </tr>
            stt++;
        }
        </tbody>
    </table>

    <button class="btn btn-primary" data-toggle="modal" data-target="#modalAddCourse"><i class="fa fa-plus" aria-hidden="true"></i> Thêm Khóa</button>
    <div id="modalAddCourse" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content-->
            <form class="modal-content" action="/ManageClass/AddCourse" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"> Thêm Khóa học </h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="email">Tên Khóa:</label>
                            <div class="col-sm-7">
                                <input name="CourseName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="email">Năm tuyển sinh:</label>
                            <div class="col-sm-7">
                                <input name="AdmissionYear" type="text" class="form-control">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" style="float: left"> Thêm </button>
                    <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                </div>
            </form>

        </div>
    </div>
</div>