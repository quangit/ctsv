@using WEBPCTSV.Models.bean;

@{
    Layout = null;
}

<div class="listbox listbox-sidebar event-box">
    <div class="listbox-title">
        <a href="/ThongBao">
            <h4><i class="fa fa-mortar-board"></i> THÔNG BÁO</h4>
        </a>
        <i class="fa fa-arrow-right"></i>
    </div>
    <div class="listbox-content">
        @foreach (News x in @ViewBag.topNews)
        {
            <div class="listbox-content-item">
                <div class="listbox-content-item-title">
                    <p><a href="../ThongBao/ChiTiet?id=@x.IdNews" title="@x.Title">@WEBPCTSV.Helpers.Common.StringExtension.GetLimitSubString(x.Title, 10)</a></p>
                </div>
                <div class="listbox-content-item-moreinfo">
                    <span class="listbox-content-item-moreinfo-comment date"><i class="fa fa-calendar"></i> @x.CreatedDate.Day/@x.CreatedDate.Month/@x.CreatedDate.Year</span>
                </div>
            </div>
        }
    </div>
</div>

