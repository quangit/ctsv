@using WEBPCTSV.Models.bean
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<ol class="breadcrumb box-shadow">
    <li>
        <a href="TrangChu">Trang chủ</a>
    </li>
    <li class="active">Thông tin tài khoản</li>
</ol>
@{
    AccountSession accountSession = (AccountSession)Session["AccountSession"];
}
<div class="main-content">
    <div class="col-xs-12 col-sm-12">
        <div class="main-form">
            <h3>Thông tin tài khoản</h3>
            <div class="form-group">
                <label>Tên tài khoản</label>
                <input type="text" class="form-control" id="TenDangNhap" name="TenDangNhap" value="@accountSession.UserName" readonly>
            </div>
            <div class="form-group">
                <label>Họ tên</label>
                <input type="text" class="form-control" id="HoTen" name="HoTen" value="@accountSession.FullName">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" id="Email" name="Email" value="">
            </div>
            <div class="form-group">
                <label>Mật khẩu mới</label>
                <input type="password" class="form-control" id="matkhau" name="matkhau" value="">
            </div>
            <input class="btn btn-danger" style="float: right;" type="submit" value="Cập nhật"/>
        </div>
    </div>
</div>