@using WEBPCTSV.Models.bean;

@{
    Layout = null;
}

<div class="listbox listbox-sidebar event-box">
    <div class="listbox-title">
        <a href="/ThongBao">
            <h4><i class="fa fa-mortar-board"></i> HỎI ĐÁP</h4>
        </a>
        <i class="fa fa-arrow-right"></i>
    </div>
    <div class="listbox-content">
        @foreach (Question x in @ViewBag.randomQuestion)
        {
            <div class="listbox-content-item">
                <div class="listbox-content-item-title">
                    <p><a href="/TuVan/DanhSachCauHoi/ChiTiet?id=@x.IdQuestion" title="@x.Title">@WEBPCTSV.Helpers.Common.StringExtension.GetLimitSubString(x.Title, 10)</a></p>
                </div>
                <div class="listbox-content-item-moreinfo">
                    <span class="listbox-content-item-moreinfo-comment date"><i class="fa fa-calendar"></i> @x.ReplyDate.Value.Day/@x.ReplyDate.Value.Month/@x.ReplyDate.Value.Year  | @x.Field</span>
                </div>
            </div>
        }
    </div>
</div>

