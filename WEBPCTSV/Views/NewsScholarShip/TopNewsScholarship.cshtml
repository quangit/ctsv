@using WEBPCTSV.Models.bean;

@{
    Layout = null;
}

<div class="listbox listbox-sidebar event-box">
    <div class="listbox-title">
        <a href="/HocBong">
            <h4><i class="fa fa-mortar-board"></i> HỌC BỔNG CHÚ Ý</h4>
        </a>
        <i class="fa fa-arrow-right"></i>
    </div>
    <div class="listbox-content">
        @foreach (NewsScholarship x in (List<NewsScholarship>)@ViewBag.topNewsScholarship)
        {
            <div class="listbox-content-item">
                <div class="listbox-content-item-title">
                    <p><a href="../HocBong/ChiTiet?id=@x.IdNewsScholarship" title="@x.News.Title">@WEBPCTSV.Helpers.Common.StringExtension.GetLimitSubString(@x.News.Title, 10)</a></p>
                </div>
                <div class="listbox-content-item-moreinfo">
                    <span class="listbox-content-item-moreinfo-comment date"><i class="fa fa-calendar"></i> @x.News.CreatedDate.Day/@x.News.CreatedDate.Month/@x.News.CreatedDate.Year</span>
                    <span class="listbox-content-item-moreinfo-comment date"><i class="fa fa-mortar-board"></i> @x.Sponsor</span>
                </div>
            </div>
        }
    </div>
</div>

