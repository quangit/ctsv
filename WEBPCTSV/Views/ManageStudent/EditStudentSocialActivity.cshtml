@using WEBPCTSV.Models.bean;

@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "EditStudentSocial Activity";
}
@using WEBPCTSV.Models.Support;

<br />
@{
    Student student = ViewBag.student;
}
<div class="container-layoutmanager" ng-controller="editStudentSocialActivity">
    <input type="hidden" ng-init="idStudent = @student.IdStudent" ng-model="idStudent"/>
    <ul class="nav nav-tabs">
        <li><a href="/ManageStudent/EditStudent?idStudent=@student.IdStudent">Thông tin cơ bản</a></li>
        <li><a href="/ManageStudent/EditStudent2?idStudent=@student.IdStudent">Lý lịch</a></li>
        <li><a href="/ManageStudent/EditStudent3?idStudent=@student.IdStudent">Sức khỏe</a></li>
        <li><a href="/ManageStudent/EditStudent4?idStudent=@student.IdStudent">Bổ sung</a></li>
        <li><a href="/ManageStudent/EditStudentRelative?idStudent=@student.IdStudent">Gia đình</a></li>
        <li class="active"><a href="/ManageStudent/EditStudentSocialActivity?idStudent=@student.IdStudent">Hoạt động xã hội</a></li>
        <li><a href="/ManageStudent/EditStudentAcademicAchievement?idStudent=@student.IdStudent">Thành tích học tập</a></li>
    </ul>
    <br />
    <form class="form-horizontal" action="/ManageStudent/ProcessEditStudentSocialActivity?idStudent=@student.IdStudent" method="post">
    @if (CheckDecentralization.Check(Convert.ToInt32(Session["idDecenTralizationGroup"]), "chinhsuathongtinsinhvien"))
    {
        <div class="form-group">
            <label class="control-label col-lg-3"></label>
            <div class="col-lg-2">
                <div class="checkbox">
                    <label>
                        <input ng-init="checkBoxYouthUnion = @((student.IsYouthUnion == true)?"true":"false") " ng-model="checkBoxYouthUnion" ng-change="ChangeCheckBoxYouthUnion(@student.IdStudent)" type="checkbox" />Đoàn viên
                    </label>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="checkbox">
                    <label>
                        <input ng-init="checkBoxPoliticalParty = @((student.IsPoliticalParty == true)?"true":"false")" ng-model="checkBoxPoliticalParty" ng-change="ChangeCheckBoxPoliticalParty(@student.IdStudent)" type="checkbox" />Đảng viên
                    </label>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="control-label col-sm-3" for="studentNumber"></label>
            <div class="col-sm-6">
                @if (student.IsYouthUnion != null)
                {
                if (student.IsYouthUnion.Value)
                {
                    <p>Đoàn viên</p>
                }
                }
                @if (student.IsPoliticalParty!=null)
                {
                if (student.IsPoliticalParty.Value)
                {
                    <p>Đảng viên</p>
                }
                }                                                                                                                                                                         
            </div>
        </div>
        
    }

        <div class="form-group">
            <label class="control-label col-lg-3"> Chức vụ</label>
            <div class="col-lg-6">
                @foreach (RegencyStudent regencyStudent in student.RegencyStudents)
                {
                <p style="margin-top:10px"><span class="glyphicon glyphicon-star-empty"></span> @regencyStudent.Regency.RegencyName</p>
                }

                <button class="btn btn-default" type="button" data-toggle="modal" data-target="#modalRegency" @if (!CheckDecentralization.Check(Convert.ToInt32(Session["idDecenTralizationGroup"]), "chinhsuathongtinsinhvien")) { @: disabled
                                                }>
                    <span class="glyphicon glyphicon-plus"></span> Chức vụ
                </button>
                <!-- Modal -->
                <div id="modalRegency" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-sm">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Chức vụ</h4>
                            </div>
                            <div class="modal-body">
                                @foreach (Regency regency in ViewBag.regency)
                                {
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" ng-init="checkBoxRegency_@regency.IdRegency = @(student.RegencyStudents.Any(s => s.IdRegency.Equals(regency.IdRegency))?"true":"false")" ng-model="checkBoxRegency_@regency.IdRegency" ng-change="ChangeSelectIdRegency('@regency.IdRegency',@student.IdStudent)" />@regency.RegencyName
                                    </label>
                                </div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-lg-3" for="email">Hoạt động xã hội:</label>
            <div class="col-lg-6">
                @foreach (StudentSocialActivity s in student.StudentSocialActivities)
                {
                    <p style="margin-top:10px"><span class="glyphicon glyphicon-star-empty"></span> @s.Socialactivity.SocialActivityName <label class="label label-danger" ng-click="DeleteStudentSocialActivity('@s.IdStudentSocialActivities')">Xóa</label></p>
                    <p style="margin-top:10px"><span class="glyphicon glyphicon-time"></span> @s.Socialactivity.Time.Value.ToString("dd/MM/yyyy")  <span class="glyphicon glyphicon-map-marker"></span> @s.Socialactivity.Place</p>
                }

                <button class="btn btn-default" type="button" ng-click="GetListSocialActivity()" data-toggle="modal" data-target="#modalSocialActivity" @if (!CheckDecentralization.Check(Convert.ToInt32(Session["idDecenTralizationGroup"]), "chinhsuathongtinsinhvien")) { @: disabled
                                                }>
                    <span class="glyphicon glyphicon-plus"></span> Hoạt động xã hội
                </button>
                <!-- Modal -->
                <div id="modalSocialActivity" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-lg">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Hoạt động xã hội </h4>
                            </div>
                            <div class="modal-body">
                                <div id="listSocialActivity" ng-bind-html="listSocialActivity">
                                   
                                </div>                         
                                <ul class="pager">
                                    <li><a href="#" ng-click="PreviousPage()">Previous</a></li>
                                    <li><input style="width:60px;text-align:center" ng-init="pageSocialActivity =1 " ng-model="pageSocialActivity" type="text" /></li>
                                    <li><a href="#" ng-click="NextPage()">Next</a></li>
                                </ul>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <button type="submit" class="btn btn-primary" @if (!CheckDecentralization.Check(Convert.ToInt32(Session["idDecenTralizationGroup"]), "chinhsuathongtinsinhvien")) { @: disabled
                                        }>
            Lưu thông tin
        </button>
    </form>
</div>
<script>
    function AddSocial(idSocial) {
        $.ajax({
            url: "/SocialActivity/AddStudentSocialActivity",
            type: "post",
            data: { 'idStudent': @student.IdStudent,"idSocialActivity":idSocial },
            success: function (result) {
                location.reload();
            }
        });
    }
</script>


