@model List<Student>
@using WEBPCTSV.Models.bean;

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên sinh viên</th>
                <th>Mã số sinh viên</th>
                <th>Lớp</th>
                <th>Khoa</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = 1;
            }
            @foreach (Student student in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@student.LastNameStudent @student.FirstNameStudent</td>
                    <td>@student.StudentNumber</td>
                    <td>
                        @if (student.IdClass != null)
                        { @student.Class.ClassName}
                    </td>
                    <td>
                        @if (student.IdClass != null)
                        {@student.Class.Faculty.FacultyName}
                    </td>
                    <td>@student.MobilePhoneNumber</td>
                    <td>@student.Email</td>
                    <td><a href="/ManageStudent/EditStudent?idStudent=@student.IdStudent"> Chi tiết </a></td>
                </tr>

                        stt = stt + 1;
            }

            

        </tbody>
    </table>
    
</div>
<script>

</script>