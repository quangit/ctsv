@model List<SocialActivity>
@using WEBPCTSV.Models.bean;

@{
    List<SocialActivity> listSocialActivity = Model;
    Student student = ViewBag.student;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên hoạt động</th>
            <th>Thời gian</th>
            <th>Địa điểm</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SocialActivity socialActivity in listSocialActivity)
        {
            <tr>
                <td>@socialActivity.SocialActivityName</td>
                <td>@socialActivity.Time</td>
                <td>@socialActivity.Place</td>
                <td>
                    <button type="button" class="btn btn-success" onclick="AddSocial('@socialActivity.IdSocialActivity')">Thêm</button>
                </td>
            </tr>
        }
    </tbody>
</table>


