@using WEBPCTSV.Models.bean;
@model Question
@{
    ViewBag.Title = "Trả lời câu hỏi tư vấn";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<script src="~/Content/ckfinder/ckfinder.js"></script>
<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/js/jquery.validate.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document)
            .ready(
                    function () {
                        $("#fCapNhat")
                                .validate(
                                        {
                                            //ignore: [],
                                            rules: {
                                                ContentHtml: {
                                                    required: function () {
                                                        CKEDITOR.instances.ContentHtml.updateElement();
                                                    }
                                                },
                                                Email: {
                                                    required: true,
                                                    email: true
                                                },
                                                TypeRequest: {
                                                    required: true,
                                                },
                                                Information: {
                                                    required: true,
                                                },
                                                Field: {
                                                    required: true,
                                                },
                                                Title: {
                                                    required: true,
                                                },
                                                Reply: {
                                                    required: function () {
                                                        CKEDITOR.instances.Reply.updateElement();
                                                    }
                                                }
                                            },
                                            messages: {
                                                ContentHtml: {
                                                    required: "Chưa nhập câu hỏi!",
                                                },
                                                Email: {
                                                    required: "Chưa nhập địa chỉ email!",
                                                    email: "Nhập sai định dạng địa chỉ email!"
                                                },
                                                TypeRequest: {
                                                    required: "Chưa chọn đối tượng!",
                                                },
                                                Information: {
                                                    required: "Chưa nhập thông tin!",
                                                },
                                                Field: {
                                                    required: "Chưa chọn lĩnh vực!",
                                                },
                                                Title: {
                                                    required: "Chưa nhập tiêu đề!",
                                                },
                                                Reply: {
                                                    required: "Chưa nhập nội dung câu trả lời!",
                                                }
                                            },
                                            submitHandler: function (form) {
                                                form.submit();
                                            }
                                        });
                    });
</script>
<style type="text/css">
    label.error {
        color: #FF0000;
    }

    input.error {
        border: 2px solid #FF0000;
        color: #0000FF;
        border-style: ridge;
    }
</style>
<ol class="breadcrumb box-shadow">
    <li><a href="~/">Trang chủ</a></li>
    <li><a href="~/QuanLy/QuanLyCauHoi">Quản lý tư vấn</a></li>
    <li class="active">Thêm mới câu hỏi thường gặp</li>
</ol>
<div class="main-content">
    <div class="col-xs-12 col-sm-12">
        <div class="main-form">
            @using (Html.BeginForm("CapNhat", "QuanLy/QuanLyCauHoi", FormMethod.Post, new { @Id = "fCapNhat" }))
            {
                <input type="hidden" id="is-edit" name="IsEdit" class="form-control">
                <input type="hidden" id="Title" name="IdQuestion" class="form-control" value="@Model.IdQuestion">
                <div class="form-group">
                    <label>Đối tượng</label>
                    <select id="i_am" name="TypeRequest" class="form-control" onchange="replaceField()">
                        <option value="student" @(Model.TypeRequest.Equals("student") ? "selected" : "")>Sinh viên</option>
                        <option value="old-student" @(Model.TypeRequest.Equals("old-student") ? "selected" : "")>Cựu sinh viên</option>
                        <option value="parent" @(Model.TypeRequest.Equals("parent") ? "selected" : "")>Phụ huynh</option>
                        <option value="hightschool-student" @(Model.TypeRequest.Equals("hightschool-student") ? "selected" : "")>Học sinh phổ thông</option>
                        <option value="other" @(Model.TypeRequest.Equals("other") ? "selected" : "")>Khác</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Lĩnh vực</label>
                    <select name="Field" class="form-control">
                        <option value="Cấp phát các loại giấy tờ - Hồ sơ Sinh viên" @(Model.TypeRequest.Equals("Cấp phát các loại giấy tờ - Hồ sơ Sinh viên") ? "selected" : "")>Cấp phát các loại giấy tờ - Hồ sơ Sinh viên</option>
                        <option value="Tạm dừng; Học lại; Học phí; Kỷ luật; Khen thưởng" @(Model.TypeRequest.Equals("Tạm dừng; Học lại; Học phí; Kỷ luật; Khen thưởng") ? "selected" : "")> Tạm dừng; Học lại; Học phí; Kỷ luật; Khen thưởng</option>
                        <option value="Chế độ chính sách; Học bổng; Phục vụ Sư phạm" @(Model.TypeRequest.Equals("Chế độ chính sách; Học bổng; Phục vụ Sư phạm") ? "selected" : "")>Chế độ chính sách; Học bổng; Phục vụ Sư phạm</option>
                        <option value="Điểm rèn luyện; Hoạt động cộng đồng; Đoàn - Hội" @(Model.TypeRequest.Equals("Điểm rèn luyện; Hoạt động cộng đồng; Đoàn - Hội") ? "selected" : "")>Điểm rèn luyện; Hoạt động cộng đồng; Đoàn - Hội</option>
                        <option value="Tư vấn hướng nghiệp - Tuyển sinh" @(Model.TypeRequest.Equals("Tư vấn hướng nghiệp - Tuyển sinh") ? "selected" : "")>Tư vấn hướng nghiệp - Tuyển sinh</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Tên</label>
                    <input type="text" id="Name" name="Name" class="form-control" placeholder="Nhập tiêu đề câu hỏi" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label>Ngày hỏi</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@(Model.CreatedDate != null ? Model.CreatedDate.Value.ToString("dd/MM/yyyy") : "")">
                </div>
                <div class="form-group">
                    <label>Thông tin</label>
                    <input type="text" id="Information" name="Information" class="form-control" placeholder="Nhập tiêu đề câu hỏi" value="@Model.Infomation">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" id="Email" name="Email" class="form-control" placeholder="Nhập tiêu đề câu hỏi" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label>Tiêu đề</label>
                    <input type="text" id="Title" name="Title" class="form-control" placeholder="Nhập tiêu đề câu hỏi" value="@Model.Title">
                </div>
                <div class="form-group">
                    <label>Nội dung</label>
                    <textarea id="ContentHtml" name="ContentHtml" class="form-control" rows="6" placeholder="Nội dung câu hỏi">@Model.ContentHtml</textarea>
                </div>
                <div class="form-group">
                    <label>Trả lời</label>
                    <textarea id="Reply" class="form-control" rows="7" name="Reply" placeholder="Câu trả lời">@Model.Reply</textarea>
                </div>
                <input class="btn btn-success" type="submit" value="Trả lời" />
                <input class="btn btn-primary" type="submit" onclick="updateQuestion()" value="Cập nhật" />
            }
        </div>
    </div>
</div>
<script>
    var ckeditor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, { language: languageCode });
    };
    $(function () {
        createEditor('vi', 'ContentHtml');
        createEditor('vi', 'Reply');
    });

    function updateQuestion() {
        $('#is-edit').val('true');
    }
</script>
