@using WEBPCTSV.Models.bean
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "Group";
}

<h3 class="header-paper">Quản lý nhóm phần quyền</h3>

@{
    List<DecentralizationGroup> listGroup = ViewBag.listGroup;
}
<button class="btn btn-success" data-toggle="modal" data-target="#ModalAddGroup" style="margin-left: 10px"><span class="glyphicon glyphicon-plus"></span> Thêm nhóm phân quyền</button>
<hr/>
<div class="container-layoutmanager">

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Tên nhóm</th>
        </tr>
        </thead>
        <tbody>
        @foreach (DecentralizationGroup group in listGroup)
        {
            <tr>
                <td>
                    <a href="/ManageDecentralization/DecentralizationGroup?idgroup=@group.IdDecentralizationGroup&&nameGroup=@group.DecentralizationGroupName">@group.DecentralizationGroupName</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<!-- Modal -->
<div class="modal fade" id="ModalAddGroup" role="dialog" ng-controller="group">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm nhóm</h4>
            </div>
            <div class="modal-body">
                <input id="inputNameGroup" ng-model="inputNameGroup" type="text" class="form-control" placeholder="nhâp tên nhóm"/>
                <button class="btn btn-success" style="margin-top: 10px" data-dismiss="modal" ng-click="AddGroup()">Thêm</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

</div>