@using WEBPCTSV.Models.bean;
@{
    ViewBag.Title = "Thông tin cựu sinh viên";
    ViewBag.Active = "AlumniInfo";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<ol class="breadcrumb box-shadow">
    <li><a href="TrangChu">Trang chủ</a></li>
    <li class="active">Thông tin cựu sinh viên</li>
</ol>

<div class="main-content">
    @using (Html.BeginForm("ThongTinCSV", "QuanLy", FormMethod.Post, new { @Id = "fUpdateInfo" }))
    {
        <div class="resource form-group">
            <label class="resource-title">
                @ViewBag.alumniIntro.ResourceName
            </label>
            <textarea class="editor" id="N_@ViewBag.alumniIntro.IdResource" name="N_ @ViewBag.alumniIntro.IdResource">@ViewBag.alumniIntro.ResourceContent</textarea>
        </div>
        <div class="resource form-group">
            <label class="resource-title">
                @ViewBag.alumniStar.ResourceName
            </label>
            <textarea class="editor" id="N_@ViewBag.alumniStar.IdResource" name="N_@ViewBag.alumniStar.IdResource">@ViewBag.alumniStar.ResourceContent</textarea>
        </div>
        <div class="btn-group">
            <input type="submit" class="btn btn-success" value="Cập nhật" />
        </div>
    }
</div>

<script language="javascript" type="text/javascript">
    var ckeditor;
    function createEditor(languageCode, id) {

        var editor = CKEDITOR.replace(id, { language: languageCode });
    };
    $('.editor').each(function () {
        createEditor('vi', $(this).attr("name"));
    });
</script>