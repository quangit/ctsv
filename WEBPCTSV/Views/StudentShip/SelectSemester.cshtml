@using WEBPCTSV.Models.bean;
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "Class";
}

<h3 class="header-paper">Chọn học kì</h3>

<div ng-controller="SelectSemesterStudentShip">


    <form class="form-horizontal" action="/StudentShip/AddStudentShip" method="post">
        <div class="form-group">
            <label class="control-label col-lg-3" for="selectSemester">Học kì:</label>
            <div class="col-lg-4">
                <select id="selectSemester" name="selectSemester" ng-model="idSemester" ng-change="ChoiseSemester()" class="form-control">
                    <option value="">Chọn học kỳ </option>
                    @foreach (WEBPCTSV.Models.bean.Semester semester in ViewBag.listSemester)
                    {
                        <option value="@semester.IdSemester">Học kỳ @semester.SemesterYear.SemesterYearName năm học @semester.Year.YearName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group" style="display:none">
            <label class="control-label col-lg-3" for="email">Tổng số tiền học bổng:</label>
            <div class="col-lg-4">
                <div class="input-group">
                    <input id="totalMoney" name="totalMoney" type="number" ng-model="totalMoney" value="{{totalMoney}}" class="form-control">
                    <span class="input-group-addon"> VNĐ </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-3" for="email"></label>
            <div class="col-lg-4">
                <button type="submit" class="btn btn-success">Xét danh sách học bổng </button>
            </div>
        </div>
    </form>
</div>

