@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "Danh sách học bổng ";
}
@{
    List<WEBPCTSV.Models.bean.LearningOutCome> listLearningOutCome = ViewBag.listLearningOutCome;
        <h3 class="header-paper">Danh sách học bổng.</h3>
        <div ng-controller="ScoteStudent">
            <a href="/StudentShip/StudentShipFacultyCLC?idSemester=@ViewBag.Semester" style="float:left;margin-left:10px"><strong><i class="fa fa-file-o aria-hidden=" true"></i> Xét học bổng khuyến khích học tập</strong></a>

            <form action="/StudentShip/ListScoteStudent?idSemester=@ViewBag.Semester&page=1" method="post">
                <div class="input-group" style="width:400px;float:right;margin-right:20px;padding-bottom:5px">
                    <input name="search" type="text" class="form-control">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span>Tìm kiếm</button>
                    </div>
                </div>
            </form>
            <hr style="clear:both" />

            <div class="container-layoutmanager">
                @Html.Partial("_ListScoteStudentShip", listLearningOutCome)
                @{
        WEBPCTSV.Models.Support.PageNumber pageNumber = ViewBag.pageNumber;
                }
                @Html.Partial("~/Views/PartialShared/_PageNumber.cshtml", pageNumber)
            </div>
            
        </div> 
}







