@using WEBPCTSV.Models.bean
@{
    ViewBag.Title = "SendStudenshipApplication";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h3>Gửi đơn xem xét học bổng</h3>

<center>
    <form class="form-horizontal" action="/StudentShip/AddStudentShipApplication" method="get">
        <div class="form-group">
            <label class="control-label col-lg-3" for="selectSemester">Học kì:</label>
            <div class="col-lg-4">
                <select id="selectSemester" name="selectSemester" ng-model="idSemester" ng-change="ChoiseSemester()" class="form-control">
                    <option value="">Chọn học kỳ </option>
                    @foreach (Semester semester in ViewBag.listSemester)
                    {
                        <option value="@semester.IdSemester">Học kỳ @semester.SemesterYear.SemesterYearName năm học @semester.Year.YearName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3" for="selectSemester">Học kì:</label>
            <div class="col-lg-4">
                <button type="submit" class="btn btn-primary"> Gửi đơn xin xét học bổng </button>
            </div>
        </div>
    </form>
</center>