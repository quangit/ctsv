@model List<WEBPCTSV.Models.bean.CAUHOI>

@{
    ViewBag.Title = "Trang chủ";
    ViewBag.Active = "TrangChu";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <h3>Thống kê tổng quan</h3>
        <hr />
        <h4>Phòng Công Tác Sinh Viên - Trường Đại học Bách khoa - Đại học Đà Nẵng</h4>
        <ul>
            <li>Địa chỉ: 54 - Nguyễn Lương Bằng - Đà Nẵng.</li>
            <li>Tel: 0511.3738.268 - Email: ctsv.dhbk@dut.udn.vn.</li>
        </ul>
    </div>

    <div class="col-xs-6 col-sm-6 ">
        <div class="panel panel-success">
            <div class="panel-heading"><i class="fa fa-area-chart"></i> Thống kê website</div>
            <div class="panel-body">
                <ul>
                    <li>Tổng số lượt view : @HttpContext.Current.Application["Visitors"].ToString()</li>
                    <li>Số lượng người đang online: @HttpContext.Current.Application["OnlineVisitors"].ToString()</li>
                </ul>
            </div>
        </div>

    </div>
    <div class="col-xs-6 col-sm-6 ">
        <div class="panel panel-success">
            <div class="panel-heading"><i class="fa fa-area-chart"></i> Thống kê hệ thống</div>
            <div class="panel-body">
                <ul>
                    <li>Tổng số lượng câu hỏi : @ViewData["tongcauhoi"]</li>
                    <li>Số lượng câu hỏi - đáp : @ViewData["tonghoidap"]</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 ">
        <div class="panel panel-success">
            <div class="panel-heading"><i class="fa fa-question-circle"></i> Các câu hỏi gần đây</div>
            <div class="panel-body">
                <table class="table table-hover">
                    @foreach (var x in Model)
                    {
                        <tr class="noidung">
                            <td style="width: 10%">@x.ThongTin</td>
                            <td style="width: 25%">@x.TieuDe</td>
                            <td style="width: 25%"><p class="mota">@(x.NoiDung.Length > 150 ? x.NoiDung.Substring(0, 150) + "..." : x.NoiDung) </p></td>
                            <td style="width: 10%"> @x.DoTuong </td>
                            <td style="width: 11%">
                                    <span class="label label-primary">
                                        @Html.ActionLink("Trả lời", "TraLoiCauHoi", new { id = @x.IdCauHoi })
                                    </span>
                                    <span class="label label-danger">
                                        @Html.ActionLink("Xóa", "XoaCauHoi", new { id = @x.IdCauHoi })
                                    </span>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>
</div>

<div class="clearfix"></div>

