@using WEBPCTSV.Models.bean;
@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewBag.Title = "Class";
}

<h2>Class</h2>
@{
    List<Class> listClass = ViewBag.Class;
}
<div ng-controller="ManageYear">

    <table class="table table-hover" style="width:500px">
        <thead>
            <tr>
                <th>STT</th>
                <th>Năm</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = 1;
            }
            @foreach (Year year in ViewBag.Year)
            {
                <tr>
                    <td>@stt</td>
                    <td>@year.YearName</td>
                    <td>

                        <label class="label label-success" data-toggle="modal" data-target="#modalEditYear_@year.IdYear">Edit</label>
                        <div id="modalEditYear_@year.IdYear" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-sm">

                                <!-- Modal content-->
                                <form class="modal-content" action="/ManageClass/UpdateYear?idYear=@year.IdYear" method="post">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title"> Chỉnh sửa Khoa</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-horizontal" role="form">
                                            <div class="form-group">
                                                <label class="control-label col-sm-5" for="email">Tên Khoa:</label>
                                                <div class="col-sm-7">
                                                    <input name="YearName" value="@year.YearName" type="text" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary" style="float:left"> Lưu chỉnh sửa  </button>
                                        <a href="/ManageClass/DeleteYear?idYear=@year.IdYear"><input type="button" class="btn btn-danger" style="float:left" value="Xóa" /></a>
                                        <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>

    <button class="btn btn-primary" data-toggle="modal" data-target="#modalAddYear">Thêm Khoa</button>
    <div id="modalAddYear" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content-->
            <form class="modal-content" action="/ManageClass/AddYear" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"> Thêm Khoa </h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="email">Tên Khoa:</label>
                            <div class="col-sm-7">
                                <input name="YearName" type="text" class="form-control">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" style="float:left"> Thêm  </button>
                    <button type="button" class="btn btn-default" onclick="window.location.reload();" data-dismiss="modal">Đóng</button>
                </div>
            </form>

        </div>
    </div>
</div>






