@using WEBPCTSV.Models.bean;
@using PagedList.Mvc;
@model PagedList.IPagedList<NewsJob>

@{
    ViewBag.Title = "Tuyển dụng";
    ViewBag.Active = "TuyenDung";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}


<ol class="breadcrumb box-shadow">
    <li><a href="TrangChu">Trang chủ</a></li>
    <li class="active">Quản lý tuyển dụng</li>
</ol>
<div class="main-content">
    <div class="funtion-block">
        <a class="btn btn-md btn-success" href="/QuanLy/QuanLyTuyenDung/Them">
            <i class="fa fa-plus-square"></i> Thêm mới
        </a>
    </div>
    <hr />
    <div class="alert-result">
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">
                @((string)TempData["success"])
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger">
                @((string)TempData["error"])
            </div>
        }
    </div>
    <div id="tbnoidung">
        <table class="table table-hover">
            <thead>
                <tr class="tieude">
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th width="30%">Mô tả</th>
                    <th>Nhà tuyển dụng</th>
                    <th width="11%">Tùy Chọn</th>
                </tr>
            </thead>
            @foreach (var news in Model)
            {
                <tr class="noidung">
                    <td>@news.IdNewsJob</td>
                    <td>@news.News.Title</td>
                    <td><p class="mota"> @news.News.Description </p></td>
                    <td>@news.Company</td>
                    <td>

                        <a href="../QuanLy/QuanLyTuyenDung/CapNhat?id=@news.IdNewsJob">
                            <span data-tooltip="true" title="Chỉnh sửa" class="btn btn-warning btn-sm">
                                <i class="fa fa-pencil color-white"></i>
                            </span>
                        </a>

                        <a href="../QuanLy/QuanLyTuyenDung/Xoa?id=@news.IdNewsJob">
                            <div data-tooltip="true" title="Xóa" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash color-white"></i>
                            </div>

                        </a>
                    </td>
                </tr>
            }
        </table>
        <div class="menuTrang">
            @Html.PagedListPager(Model, page => Url.Action("../QuanLy/QuanLyTuyenDung", new { page = page }))
        </div>
    </div>
</div>
